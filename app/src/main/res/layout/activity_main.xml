<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FFC6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/main_push"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/family" />

    <ImageButton
        android:id="@+id/main_bluetooth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/textView7"
        android:layout_alignBottom="@+id/main_push"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/bluetooth" />

    <ImageButton
        android:id="@+id/main_alarm"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/alarm"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:id="@+id/main_record"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_above="@+id/main_bluetooth"
        android:layout_alignBottom="@+id/main_alarm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginRight="50dp"
        android:background="@drawable/record"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_push"
        android:layout_alignLeft="@+id/main_alarm"

        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp"
        android:text="鬧鐘設定"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_record"
        android:layout_below="@+id/main_record"
        android:layout_marginLeft="15dp"
        android:text="服藥紀錄"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_push"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:text="親友推播"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_bluetooth"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:text="藍牙設定"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pill_box" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:text="藥盒服藥確認系統"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />


</RelativeLayout>
