<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:hint="Enter message here : "
        android:gravity="top|start"
        android:id="@+id/textMessage"
        android:layout_above="@+id/bottomLayout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_boarder_mesaagesend"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomLayout"
        android:weightSum="8">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_add"
            android:padding="5dp"
            android:id="@+id/chooseMedia"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/fileTypeHint"
            android:hint=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="6"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:text="Send"
            android:id="@+id/sendToUser"
            android:background="#eeeeee"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/fourItemMenuLocate"
        android:layout_above="@+id/bottomLayout"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:visibility="gone"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#e0dddddd"
        android:id="@+id/grayControl"
        android:layout_above="@+id/fourItemMenuLocate"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>
